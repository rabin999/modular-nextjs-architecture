# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

[*.{js,jsx,ts,tsx}]
indent_size = 4
max_line_length = 140

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2
max_line_length = off

[*.{css,scss}]
indent_size = 4

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2
end_of_line = lf

[package.json]
indent_size = 2

[tsconfig.json]
indent_size = 2
